<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bumble.headline.fragment.NewsDetailFragment">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" tools:src="@tools:sample/backgrounds/scenic"
            android:id="@+id/newsArticleImage"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/newsArticleTime"/>
    <TextView
            android:text="Apr 1,2018"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newsArticleTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/newsArticleImage" android:layout_marginBottom="429dp"
            android:textColor="@android:color/black"
    />
    <TextView
            android:text="TextView"
            android:layout_width="378dp"
            android:layout_height="83dp"
            android:id="@+id/newsArticleDescription"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/newsArticleTime"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="325dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="17dp"
            android:textColor="@android:color/black"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newsArticleLink" android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@+id/newsArticleDescription"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="106dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="327dp"
            android:textColor="@android:color/black"
            android:linksClickable="true"
            android:autoLink="web"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
