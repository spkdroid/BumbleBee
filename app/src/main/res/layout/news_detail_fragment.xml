<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.bumble.headline.fragment.NewsDetailFragment"
        android:background="@android:color/white"
>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="275dp" tools:src="@tools:sample/backgrounds/scenic"
            android:id="@+id/newsArticleImage"
            android:contentDescription="@string/detailImageDescription"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newsArticleTime"
            android:textColor="@android:color/black"
            tools:layout_editor_absoluteY="238dp" tools:layout_editor_absoluteX="16dp"
            android:background="@android:color/white"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:id="@+id/newsArticleTitle"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            tools:layout_editor_absoluteY="326dp" tools:layout_editor_absoluteX="16dp"
            android:background="@android:color/white"
            android:textStyle="bold"
    />

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:background="@android:color/white">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:id="@+id/newsArticleDescription"
                android:textColor="@android:color/black"
                tools:layout_editor_absoluteY="389dp" tools:layout_editor_absoluteX="16dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:id="@+id/newsArticleLink"
            android:textColor="@android:color/black"
            android:linksClickable="true"
            android:autoLink="web"
            tools:layout_editor_absoluteY="478dp" tools:layout_editor_absoluteX="5dp"
            android:background="@android:color/white"
    />
</LinearLayout>
